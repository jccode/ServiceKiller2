<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.jcchen.servicekiller"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="tk.jcchen.servicekiller.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tk.jcchen.servicekiller.ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="tk.jcchen.servicekiller.MainActivity" >
        </activity>
        <activity
            android:name="tk.jcchen.servicekiller.ui.AppGridActivity"
            android:label="@string/title_activity_app_grid"
            android:parentActivityName="tk.jcchen.servicekiller.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tk.jcchen.servicekiller.MainActivity" />
        </activity>
    </application>

</manifest>
